{"ast":null,"code":"import axios from 'axios';\nexport default {\n  name: 'TodoList',\n  data() {\n    return {\n      todos: [],\n      selectedStatus: null\n    };\n  },\n  created() {\n    this.fetchTodos();\n  },\n  methods: {\n    fetchTodos() {\n      axios.get('http://localhost:3001/todos').then(response => {\n        this.todos = response.data;\n      }).catch(error => {\n        console.error(\"There was an error fetching the todos:\", error);\n      });\n    },\n    updateStatus(todo) {\n      axios.put(`http://localhost:3001/todos/${todo.id}`, todo).then(() => {\n        console.log(\"Todo status updated\");\n      }).catch(error => {\n        console.error(\"There was an error updating the todo status:\", error);\n      });\n    },\n    deleteTodo(id) {\n      axios.delete(`http://localhost:3001/todos/${id}`).then(() => {\n        this.fetchTodos();\n      }).catch(error => {\n        console.error(\"There was an error deleting the todo:\", error);\n      });\n    },\n    filterByStatus(status) {\n      this.selectedStatus = status;\n      // Filter todos by selected status\n      this.fetchTodos();\n    },\n    statusClass(status) {\n      switch (status) {\n        case 'To Do':\n          return 'bg-red-500';\n        // Red for To Do\n        case 'In Progress':\n          return 'bg-yellow-500';\n        // Yellow for In Progress\n        case 'Done':\n          return 'bg-green-500';\n        // Green for Done\n        default:\n          return 'bg-gray-500';\n        // Default background\n      }\n    }\n  }\n};","map":{"version":3,"names":["axios","name","data","todos","selectedStatus","created","fetchTodos","methods","get","then","response","catch","error","console","updateStatus","todo","put","id","log","deleteTodo","delete","filterByStatus","status","statusClass"],"sources":["C:\\Users\\Master\\OneDrive\\Documents\\VueJs\\Blogemaster\\src\\views\\TodoList.vue"],"sourcesContent":["<template>\r\n  <div class=\"p-6 bg-gray-100 min-h-screen\">\r\n    <h2 class=\"text-2xl font-bold mb-4\">Todo List</h2>\r\n\r\n    <!-- Todos List in Flexbox -->\r\n    <div class=\"flex flex-wrap gap-4\">\r\n      <div v-for=\"todo in todos\" :key=\"todo.id\" class=\"flex flex-col p-4 bg-black text-white rounded-lg shadow-md cursor-pointer transition-transform transform hover:scale-105\">\r\n        <h3 class=\"text-xl font-semibold mb-2\">{{ todo.title }}</h3>\r\n        <p class=\"text-gray-400 mb-2\">Due Date: {{ todo.dueDate }}</p>\r\n        <div class=\"flex mb-2 space-x-2\">\r\n          <span class=\"status-label\" :class=\"statusClass(todo.status)\" @click=\"filterByStatus(todo.status)\">\r\n            {{ todo.status }}\r\n          </span>\r\n        </div>\r\n        <div class=\"mt-auto flex space-x-2\">\r\n          <router-link :to=\"{ name: 'EditTodo', params: { id: todo.id } }\" class=\"px-2 py-1 bg-blue-500 text-white rounded hover:bg-blue-600\">Edit</router-link>\r\n          <button @click.stop=\"deleteTodo(todo.id)\" class=\"px-2 py-1 bg-red-500 text-white rounded hover:bg-red-600\">Delete</button>\r\n        </div>\r\n      </div>\r\n    </div>\r\n\r\n    <!-- Add Todo Button -->\r\n    <router-link to=\"/add-todo\" class=\"mt-4 px-4 py-2 bg-green-500 text-white rounded hover:bg-green-600 inline-block\">Add Todo</router-link>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nimport axios from 'axios';\r\n\r\nexport default {\r\n  name: 'TodoList',\r\n  data() {\r\n    return {\r\n      todos: [],\r\n      selectedStatus: null\r\n    };\r\n  },\r\n  created() {\r\n    this.fetchTodos();\r\n  },\r\n  methods: {\r\n    fetchTodos() {\r\n      axios.get('http://localhost:3001/todos')\r\n        .then(response => {\r\n          this.todos = response.data;\r\n        })\r\n        .catch(error => {\r\n          console.error(\"There was an error fetching the todos:\", error);\r\n        });\r\n    },\r\n    updateStatus(todo) {\r\n      axios.put(`http://localhost:3001/todos/${todo.id}`, todo)\r\n        .then(() => {\r\n          console.log(\"Todo status updated\");\r\n        })\r\n        .catch(error => {\r\n          console.error(\"There was an error updating the todo status:\", error);\r\n        });\r\n    },\r\n    deleteTodo(id) {\r\n      axios.delete(`http://localhost:3001/todos/${id}`)\r\n        .then(() => {\r\n          this.fetchTodos();\r\n        })\r\n        .catch(error => {\r\n          console.error(\"There was an error deleting the todo:\", error);\r\n        });\r\n    },\r\n    filterByStatus(status) {\r\n      this.selectedStatus = status;\r\n      // Filter todos by selected status\r\n      this.fetchTodos();\r\n    },\r\n    statusClass(status) {\r\n      switch (status) {\r\n        case 'To Do':\r\n          return 'bg-red-500'; // Red for To Do\r\n        case 'In Progress':\r\n          return 'bg-yellow-500'; // Yellow for In Progress\r\n        case 'Done':\r\n          return 'bg-green-500'; // Green for Done\r\n        default:\r\n          return 'bg-gray-500'; // Default background\r\n      }\r\n    }\r\n  }\r\n};\r\n</script>\r\n\r\n<style scoped>\r\n.status-label {\r\n  padding: 0.5rem 1rem;\r\n  border-radius: 0.375rem;\r\n  cursor: pointer;\r\n  transition: background-color 0.3s ease;\r\n}\r\n\r\n.status-label:hover {\r\n  opacity: 0.8;\r\n}\r\n</style>\r\n"],"mappings":"AA2BA,OAAOA,KAAI,MAAO,OAAO;AAEzB,eAAe;EACbC,IAAI,EAAE,UAAU;EAChBC,IAAIA,CAAA,EAAG;IACL,OAAO;MACLC,KAAK,EAAE,EAAE;MACTC,cAAc,EAAE;IAClB,CAAC;EACH,CAAC;EACDC,OAAOA,CAAA,EAAG;IACR,IAAI,CAACC,UAAU,CAAC,CAAC;EACnB,CAAC;EACDC,OAAO,EAAE;IACPD,UAAUA,CAAA,EAAG;MACXN,KAAK,CAACQ,GAAG,CAAC,6BAA6B,EACpCC,IAAI,CAACC,QAAO,IAAK;QAChB,IAAI,CAACP,KAAI,GAAIO,QAAQ,CAACR,IAAI;MAC5B,CAAC,EACAS,KAAK,CAACC,KAAI,IAAK;QACdC,OAAO,CAACD,KAAK,CAAC,wCAAwC,EAAEA,KAAK,CAAC;MAChE,CAAC,CAAC;IACN,CAAC;IACDE,YAAYA,CAACC,IAAI,EAAE;MACjBf,KAAK,CAACgB,GAAG,CAAE,+BAA8BD,IAAI,CAACE,EAAG,EAAC,EAAEF,IAAI,EACrDN,IAAI,CAAC,MAAM;QACVI,OAAO,CAACK,GAAG,CAAC,qBAAqB,CAAC;MACpC,CAAC,EACAP,KAAK,CAACC,KAAI,IAAK;QAC