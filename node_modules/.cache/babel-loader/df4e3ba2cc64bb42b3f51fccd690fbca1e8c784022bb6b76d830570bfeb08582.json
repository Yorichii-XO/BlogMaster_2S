{"ast":null,"code":"import axios from 'axios';\nexport default {\n  props: ['todo', 'categories', 'isEdit'],\n  data() {\n    return {\n      localTodo: this.todo ? {\n        ...this.todo\n      } : {\n        title: '',\n        categoryId: '',\n        dueDate: '',\n        status: ''\n      } // Create a local copy of the todo prop\n    };\n  },\n\n  methods: {\n    handleSubmit() {\n      if (this.isEdit) {\n        axios.put(`http://localhost:3001/todos/${this.localTodo.id}`, this.localTodo).then(() => {\n          this.$emit('todoUpdated');\n        }).catch(error => {\n          console.error(\"There was an error updating the todo:\", error);\n        });\n      } else {\n        axios.post('http://localhost:3001/todos', this.localTodo).then(() => {\n          this.$emit('todoCreated');\n        }).catch(error => {\n          console.error(\"There was an error creating the todo:\", error);\n        });\n      }\n      this.$emit('closeForm');\n    },\n    editTodo(todo) {\n      this.currentTodo = todo;\n      this.isEdit = true; // Set to true for editing\n      this.showCreateForm = true;\n    },\n    resetForm() {\n      this.currentTodo = null;\n      this.isEdit = false; // Reset to false after closing\n      this.showCreateForm = false;\n    }\n  },\n  watch: {\n    todo(newValue) {\n      this.localTodo = {\n        ...newValue\n      }; // Update localTodo if prop todo changes\n    }\n  }\n};","map":{"version":3,"names":["axios","props","data","localTodo","todo","title","categoryId","dueDate","status","methods","handleSubmit","isEdit","put","id","then","$emit","catch","error","console","post","editTodo","currentTodo","showCreateForm","resetForm","watch","newValue"],"sources":["C:\\Users\\Master\\OneDrive\\Documents\\VueJs\\Blogemaster\\src\\views\\TodoForm.vue"],"sourcesContent":["<template>\r\n  <div class=\"p-6 bg-white border border-gray-200 rounded-lg shadow-md\">\r\n    <h2 class=\"text-xl font-bold mb-4\">{{ isEdit ? 'Edit Todo' : 'Add Todo' }}</h2>\r\n    <form @submit.prevent=\"handleSubmit\">\r\n      <div class=\"mb-4\">\r\n        <label for=\"title\" class=\"block text-lg font-medium mb-2\">Title:</label>\r\n        <input v-model=\"localTodo.title\" type=\"text\" id=\"title\" class=\"p-2 border rounded w-full\" required />\r\n      </div>\r\n      <div class=\"mb-4\">\r\n        <label for=\"category\" class=\"block text-lg font-medium mb-2\">Category:</label>\r\n        <select v-model=\"localTodo.categoryId\" id=\"category\" class=\"p-2 border rounded w-full\" required>\r\n          <option value=\"\">Select a Category</option>\r\n          <option v-for=\"category in categories\" :key=\"category.id\" :value=\"category.id\">\r\n            {{ category.name }}\r\n          </option>\r\n        </select>\r\n      </div>\r\n      <div class=\"mb-4\">\r\n        <label for=\"dueDate\" class=\"block text-lg font-medium mb-2\">Due Date:</label>\r\n        <input v-model=\"localTodo.dueDate\" type=\"date\" id=\"dueDate\" class=\"p-2 border rounded w-full\" />\r\n      </div>\r\n      <div class=\"mb-4\">\r\n        <label for=\"status\" class=\"block text-lg font-medium mb-2\">Status:</label>\r\n        <select v-model=\"localTodo.status\" id=\"status\" class=\"p-2 border rounded w-full\">\r\n          <option value=\"\">Select Status</option>\r\n          <option value=\"Pending\">Pending</option>\r\n          <option value=\"In Progress\">In Progress</option>\r\n          <option value=\"Completed\">Completed</option>\r\n        </select>\r\n      </div>\r\n      <div>\r\n        <button type=\"submit\" class=\"px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600\">Save</button>\r\n        <button type=\"button\" @click=\"$emit('closeForm')\" class=\"ml-2 px-4 py-2 bg-gray-500 text-white rounded hover:bg-gray-600\">Cancel</button>\r\n      </div>\r\n    </form>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nimport axios from 'axios';\r\n\r\nexport default {\r\n  props: ['todo', 'categories', 'isEdit'],\r\n  data() {\r\n    return {\r\n      localTodo: this.todo ? { ...this.todo } : { title: '', categoryId: '', dueDate: '', status: '' } // Create a local copy of the todo prop\r\n    };\r\n  },\r\n  methods: {\r\n    handleSubmit() {\r\n      if (this.isEdit) {\r\n        axios.put(`http://localhost:3001/todos/${this.localTodo.id}`, this.localTodo)\r\n          .then(() => {\r\n            this.$emit('todoUpdated');\r\n          })\r\n          .catch(error => {\r\n            console.error(\"There was an error updating the todo:\", error);\r\n          });\r\n      } else {\r\n        axios.post('http://localhost:3001/todos', this.localTodo)\r\n          .then(() => {\r\n            this.$emit('todoCreated');\r\n          })\r\n          .catch(error => {\r\n            console.error(\"There was an error creating the todo:\", error);\r\n          });\r\n      }\r\n      this.$emit('closeForm');\r\n    }\r\n    ,editTodo(todo) {\r\n    this.currentTodo = todo;\r\n    this.isEdit = true; // Set to true for editing\r\n    this.showCreateForm = true;\r\n  },\r\n  resetForm() {\r\n    this.currentTodo = null;\r\n    this.isEdit = false; // Reset to false after closing\r\n    this.showCreateForm = false;\r\n  }\r\n  },\r\n  watch: {\r\n    todo(newValue) {\r\n      this.localTodo = { ...newValue }; // Update localTodo if prop todo changes\r\n    }\r\n  }\r\n};\r\n</script>\r\n\r\n<style scoped>\r\n/* Additional scoped styles if needed */\r\n</style>\r\n"],"mappings":"AAuCA,OAAOA,KAAI,MAAO,OAAO;AAEzB,eAAe;EACbC,KAAK,EAAE,CAAC,MAAM,EAAE,YAAY,EAAE,QAAQ,CAAC;EACvCC,IAAIA,CAAA,EAAG;IACL,OAAO;MACLC,SAAS,EAAE,IAAI,CAACC,IAAG,GAAI;QAAE,GAAG,IAAI,CAACA;MAAK,IAAI;QAAEC,KAAK,EAAE,EAAE;QAAEC,UAAU,EAAE,EAAE;QAAEC,OAAO,EAAE,EAAE;QAAEC,MAAM,EAAE;MAAG,EAAE;IACnG,CAAC;EACH,CAAC;;EACDC,OAAO,EAAE;IACPC,YAAYA,CAAA,EAAG;MACb,IAAI,IAAI,CAACC,MAAM,EAAE;QACfX,KAAK,CAACY,GAAG,CAAE,+BAA8B,IAAI,CAACT,SAAS,CAACU,EAAG,EAAC,EAAE,IAAI,CAACV,SAAS,EACzEW,IAAI,CAAC,MAAM;UACV,IAAI,CAACC,KAAK,CAAC,a